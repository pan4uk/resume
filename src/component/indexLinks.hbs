<div class="card">
    <div class="card-title">
        <h3 class="m-2">{{title}}</h3>
    </div>
    <div class="card-body">
        {{#each links}}
        <div class="card p-0 mb-1">
            {{#if isPrimary}}
            <a href="{{href}}" class="btn btn-primary m-0 p-0">{{text}}</a>
            {{/if}}
            {{#if isOutline}}
            <a href="{{href}}" class="btn btn-outline-primary m-0 p-0">{{text}}</a>
            {{/if}}
            {{#if isSecondary}}
            <a href="{{href}}" class="btn btn-secondary m-0 p-0">{{text}}</a>
            {{/if}}
            {{#if isSuccess}}
            <a href="{{href}}" class="btn btn-outline-success m-0 p-0">{{text}}</a>
            {{/if}}
        </div>
        {{/each}}
    </div>
</div>