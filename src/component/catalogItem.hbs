<div class="col-6">
    <div class="card mb-2">
        <img src="{{img}}" class="card-img-top">
        <div class="p-2">
            <div>
                {{#if isHot}}<span class="badge rounded-pill text-bg-warning">HOT!</span>
                {{else}}
                <p>{{null}}</p>
                {{/if}}
                {{#if isNew}}<span class="badge rounded-pill text-bg-primary">New</span>
                {{/if}}
            </div>
            <div>
                {{#if isFast}}<span class="badge text-bg-success">Швидка доставка</span>
                {{else}}
                <p><br></p>
                {{/if}}
            </div>
            <div>
                {{#if isFree}}<span class="badge text-bg-secondary">Безкоштовна
                    доставка</span>
                {{else}}
                <p><br></p>
                {{/if}}
            </div>
            <div>
                <p> {{name}} </p>
            </div>
            <div>
                <p> {{review.amount}} {{review.text}}</p>
            </div>
            <div>
                <b> {{price}} </b>
            </div>
            <div>
                <p> {{delivery}} </p>
            </div>
            <div>
                {{#each buttons}}
                {{#if isPrimary}}
                <a href="{{link}}" class="btn btn-primary mb-3"> {{text}} </a>
                {{else}}
                <a href="{{link}}" class="btn btn-secondary mb-3"> {{text}} </a>
                {{/if}}
                {{/each}}
            </div>
            <div>
                <ul>
                    {{#each characteristics}}
                    <li>
                        {{title}}:{{value}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>