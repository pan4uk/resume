<div class="row">
    <div class="col-4">
        <p class="mt-3">{{number}}</p>
        <b class="mt-1">{{status}}</b>
    </div>

    <div class="col-2">
        <p class="mt-4">{{amount.title}}:</p>
        <b class="mt-0"> {{amount.value}} </b>
    </div>

    <div class="col-4">
        {{#each images}}
        <img class="col-2 mt-3 mb-3" src="{{this}}">
        {{/each}}
    </div>

    <div class="col-2 mt-5">
        <a href="{{button.link}}" class="btn btn-primary">{{button.text}}</a>
    </div>
    <hr class="mt5">
</div>