<main class="m-3">
    <header>
        <div>
            {{> shopheader}}
        </div>
    </header>

    <body>
        <div>
            <h1 class="mt-5"> {{header}} </h1>
        </div>
        <div>
            {{#with purchase}}
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if @first}}
                    <a href="#" class="nav-link active">{{this}}</a>
                    {{/if}}
                    {{#if @last}}
                    <a href="#" class="nav-link">{{this}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="mt-4">
                {{#with actionBlock}}
                <div class="row">
                    <div class="col-4">
                        <input class="col=4 form-control" placeholder="{{input.placeholder}}">
                    </div>
                    <div class="col-8">
                        {{#each buttons}}
                        {{#if isSuccess}}
                        <a href="{{link}}" class="btn btn-success">{{text}}</a>
                        {{/if}}
                        {{#if isOutline}}
                        <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
                        {{/if}}
                        {{#if isDanger}}
                        <a href="{{link}}" class="btn btn-danger">{{text}}</a>
                        {{/if}}
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>
            <hr>
            <div>
                {{#each itemList}}
                <div>
                    {{> purchaseItem}}
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr class="my-3">
        <div>
            {{#with userInfo}}
            <div>
                <h1> {{title}} </h1>
            </div>
            <div class="card p-2 mb-2">
                {{#with profileData}}
                <div>
                    <h4> {{title}} </h4>
                </div>
                <div class="row">
                    <div class="col-4 ">
                        <div class="mt-3">
                            {{#each fullName.surname}}

                            <div>{{this}}</div>

                            {{/each}}
                        </div>
                        <div class="mt-3">
                            {{#each otherInfo.birthday}}
                            <div>{{this}}</div>
                            {{/each}}
                        </div>
                        <div class="mt-3">
                            {{#each ../buttons}}
                            {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-4 ">
                        <div class="mt-3">
                            {{#each fullName.name}}

                            <div>{{this}}</div>

                            {{/each}}
                        </div>
                        <div class="mt-3">
                            {{#each otherInfo.sex}}
                            <div>{{this}}</div>
                            {{/each}}
                        </div>
                        <div class="mt-3">
                            {{#each ../buttons}}
                            {{#if isSecondary}}<a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>{{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="mt-3">
                            {{#each fullName.middleName}}

                            <div>{{this}}</div>

                            {{/each}}
                        </div>
                        <div class="mt-3">
                            {{#each otherInfo.language}}
                            <div>{{this}}</div>
                            {{/each}}
                        </div>
                        <div class="mt-3">
                            {{#each ../buttons}}
                            {{#if isDanger}}<a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>{{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
            <div class="card p-2 mb-2">
                <div>
                    {{#with recipients}}
                    <div>
                        <h4> {{title}} </h4>
                    </div>
                    <div class="row">
                        <div class="col-4 ">
                            <div class="mt-3">
                                {{#each users}}
                                {{#if @first}}
                                <div>{{name}}</div>
                                <div>{{phone}}</div>
                                <a href="{{button.link}}" class="btn btn-primary mt-3">{{button.text}}</a>
                                {{/if}}
                                {{/each}}
                            </div>
                        </div>
                        <div class="col-4 ">
                            <div class="mt-3">
                                {{#each users}}
                                {{#if @first}}
                                <div>{{name}}</div>
                                <div>{{phone}}</div>
                                <a href="{{button.link}}" class="btn btn-primary mt-3">{{button.text}}</a>
                                {{/if}}
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            <div class="card p-2 mb-2">
                {{#with contacts}}
                <div>
                    <div>
                        <h4> {{title}} </h4>
                    </div>
                    <div class="row">
                        <div class="col-4 ">
                            <div class="mt-3">
                                {{#each contactData.phone}}
                                <div>{{this}}</div>
                                {{/each}}
                                {{#each buttons}}
                                {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary">{{text}}</a>{{/if}}
                                {{/each}}
                            </div>
                        </div>
                        <div class="col-4 ">
                            <div class="mt-3">
                                {{#each contactData.additionalPhone}}
                                <div>{{this}}</div>
                                {{/each}}
                                {{#each buttons}}
                                {{#if isSecondary}}<a href="{{link}}"
                                    class="btn btn-outline-secondary">{{text}}</a>{{/if}}
                                {{/each}}
                            </div>
                        </div>
                        <div class="col-4 ">
                            <div class="mt-3">
                                {{#each contactData.email}}
                                <div>{{this}}</div>
                                {{/each}}
                                {{#each buttons}}
                                {{#if isDanger}}<a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>{{/if}}
                                {{/each}}
                            </div>
                        </div>
                    </div>

                </div>
                {{/with}}
            </div>
            {{/with}}
        </div>
    </body>

    <footer>
        <div>
            {{> shopfooter}}
        </div>
    </footer>
</main>