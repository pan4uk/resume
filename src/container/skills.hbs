<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="All skills" big=true}}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}){{/if}}
                    {{#if isTop}}(top){{/if}}

                    {{#unless point includeZero=true}}
                    (not learning) {{/unless}}

                    {{#unless point}}
                    {{#if point includeZero=true}}
                    (now learning)
                    {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <br>

        <section>
            {{> title data="My hobbies"}}
            {{#each hobbies}}
            {{name}}
            {{#if isMain includeZero=true}}(favourite){{/if}}
            {{/each}}
        </section>
    </main>
    {{/with}}
</div>