<main class="m-3">

    <header>
        {{> shopheader}}
    </header>

    <body>
        <div>
            <div class="mt-5">
                {{#with newsBlock}}
                <h2 class="text-center"> {{title}} </h2>
                <div class="row">
                    {{#each cards}}
                    {{> shoppost}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
        <hr class="m-5">
        <div>
            {{#with goodsBlock}}

            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a href="#" class="nav-link active">{{text}}</a>
                    {{else}}
                    {{#unless isDisabled}}
                    <a href="#" class="nav-link">{{text}}</a>
                    {{/unless}}
                    {{/if}}
                    {{#if isDisabled}}
                    <a href="#" class="nav-link disabled">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="row">
                {{#each cards}}
                {{> shopcard}}
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr class="m-5">
        <div>
            {{> shopregister}}
        </div>
        <div>
            {{> shopaction}}
        </div>
    </body>

    <footer>
        {{> shopfooter}}
    </footer>

</main>