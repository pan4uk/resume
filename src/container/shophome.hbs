<main class="m-3">

    <header>
        {{> shopheader}}
    </header>

    <body>
        <div>
            <div class="mt-5">
                {{#with newsBlock}}
                <h2 class="text-center"> {{title}} </h2>
                <div class="row">
                    {{#each cards}}
                    <div class="col-3">
                        <div class="card">
                            <div class="card-header text-bg-dark">
                                <h3>{{title}}</h3>
                                {{#if isNew}}<button type="button"
                                    class="btn btn-success btn-sm rounded-pill">New</button>{{/if}}
                                {{#if isTop}}<button type="button"
                                    class="btn btn-danger btn-sm rounded-pill">Top</button>{{/if}}
                            </div>
                            <div class="card-text text-bg-dark">
                                <h4>{{description}}</h4>
                            </div>

                        </div>
                    </div>
                    {{/each}}

                </div>
                {{/with}}
            </div>
        </div>
        <hr class="m-5">
        <div>
            {{#with goodsBlock}}

            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a href="#" class="nav-link active">{{text}}</a>
                    {{else}}
                    {{#unless isDisabled}}
                    <a href="#" class="nav-link">{{text}}</a>
                    {{/unless}}
                    {{/if}}
                    {{#if isDisabled}}
                    <a href="#" class="nav-link disabled">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="row">
                {{#each cards}}
                {{> shopcard}}
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr class="m-5">
        <div class="card text-bg-dark">
            <div class="row">
                <div class="mt-5 ">
                    {{#with subscribe}}
                    <div class="nav">
                        <div class="col-9">
                            <h2 class="col-8 mb-5 ms-4"> {{header}} </h2>
                            <p class="mb-5 ms-4"> {{description}} </p>
                        </div>
                        <div class="col-3">
                            {{#each buttons}}
                            <button href="{{link}}" class="btn btn-primary btn-lg ms-5"> {{text}}
                            </button>
                            {{/each}}
                        </div>

                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
        <div>
            {{> shopaction}}
        </div>
    </body>

    <footer>
        {{> shopfooter}}
    </footer>

</main>